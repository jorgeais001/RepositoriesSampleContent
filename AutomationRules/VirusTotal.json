{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/automationRules/aaab12ed-61e3-48ff-812a-0596d5a63195')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/aaab12ed-61e3-48ff-812a-0596d5a63195')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/automationRules",
            "apiVersion": "2019-01-01-preview",
            "properties": {
                "displayName": "VirusTotal Lookup",
                "order": 1,
                "triggeringLogic": {
                    "isEnabled": true,
                    "expirationTimeUtc": null,
                    "triggersOn": "Incidents",
                    "triggersWhen": "Created",
                    "conditions": [
                        {
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "IncidentRelatedAnalyticRuleIds",
                                "operator": "Contains",
                                "propertyValues": [
                                    "All"
                                ]
                            }
                        },
                        {      
                            "conditionType": "Property",
                            "conditionProperties": {
                                "propertyName": "IncidentStatus",
                                "operator": "Equals",
                                "propertyValues": [
                                    "New"
                                ]
                            }
                        }
                    ]
                },
                "actions": [
                    {
                        "order": 1,
                        "actionType": "RunPlaybook",
                        "actionConfiguration": {
                            "logicAppResourceId": "/subscriptions/b4d20f1d-1a4e-4321-8728-74dc17f88340/resourceGroups/ais-sharedsvcs-rg/providers/Microsoft.Logic/workflows/Get-VirusTotalDomainReport-IncidentTriggered"
                            "tenantId": "f32b97f0-efb8-4bc3-91ee-18a6e5f635c9" 
                        }
                    }
                ]
            }
        }
    ]
}
